---
import '../styles/base/index.css';

export interface Props {
  locale?: string;
}

const { locale = 'fr' } = Astro.props;
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <meta name="google-site-verification" content="s0dZianZvrfGTn2kwbdAzhkalzxOuGQY27v4xwgxYcI" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" href="/favicon.ico" />

    <!-- SEO -->
    <link rel="alternate" hreflang="fr" href="https://bistrotmichels.com/" />
    <link rel="alternate" hreflang="en" href="https://bistrotmichels.com/en/" />


    <!-- Sitemap -->
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />

    <!-- Hero Image -->
    <link
      rel="preload"
      as="image"
      href="/assets/images/hero-img.webp"
      type="image/webp"
      fetchpriority="high"
      media="(max-width: 1024px)"
    />


    <!-- Fonts -->
    <link
      rel="preload"
      href="/assets/fonts/inter/inter-400.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/assets/fonts/inter/inter-500.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/assets/fonts/inter/inter-600.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/assets/fonts/playfair/playfair-500.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/assets/fonts/playfair/playfair-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

		<meta name="generator" content={Astro.generator} />
    <meta name="description" content="Bistrot Michel's - Restaurant bistrot de quartier au coeur de Bordeaux St Pierre." />
		<title>Bistrot Michel's</title>


	</head>
	<body>
		<slot />
	</body>
</html>

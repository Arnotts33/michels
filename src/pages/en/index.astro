---
import Layout from '../../layouts/Layout.astro';
import About from '../../sections/about/About.astro';
import Footer from '../../sections/footer/Footer.astro';
import Galery from '../../sections/galery/Galery.astro';
import Header from '../../sections/header/Header';
import Hero from '../../sections/hero/Hero.astro';
import Keywords from '../../sections/keywords/Keywords.astro';
import Menu from '../../sections/menu/Menu.astro';

import {menuData} from '../../data/menuData.en.ts';

const locale: 'en' | 'fr' = 'en';
const seoData = {
  title: 'Bistrot Michel\'s - Authentic French Restaurant in Bordeaux',
  description: 'Experience Bistrot Michel\'s, an authentic neighborhood restaurant in the heart of Bordeaux Saint-Pierre. Traditional French cuisine, fresh ingredients, good wines, cozy atmosphere.',
  locale: 'en',
  canonicalURL: 'https://bistrotmichels.com/en/'
};
---

<Layout {...seoData} locale={locale}>
  <Header locale={locale} client:load/>
  <Hero locale={locale}/>
  <Keywords locale={locale}/>
  <About locale={locale}/>
  <Menu menuData={menuData} />
  <Galery />
  <Footer locale={locale} />
</Layout>
